{
  "name": "generate-npc-card",
  "version": "1.3.2",
  "description": "Этот скрипт предназначен для генерации карточек персонажей по данным из JSON-файла для настольной игры Dungeons & Dragons (DnD).",
  "homepage": "https://github.com/Magic-and-Play/Generate_NPC_Card#readme",
  "bugs": {
    "url": "https://github.com/Magic-and-Play/Generate_NPC_Card/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Magic-and-Play/Generate_NPC_Card.git"
  },
  "license": "ISC",
  "author": "Prime-GS",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "generate:barrels": "node ./scripts/generate-barrels.cjs",
    "generate:aliases": "node ./scripts/generate-aliases.cjs",
    "prebuild": "npm run generate:barrels && npm run generate:aliases",
    "build": "tsc",
    "start": "node dist/index.js",
    "build:css": "sass src/styles/style.scss dist/style.css",
    "generate": "tsc && tsc-alias && npm run build:css && node dist/index.js"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "sass": "^1.91.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "imports": {
    "#utils": "./dist/utils/index.js",
    "#src": "./dist/index.js"
  }
}
