{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "#src": [
        "index.ts"
      ],
      "#src/*": [
        "index.ts"
      ],
      "#utils": [
        "utils/index.ts"
      ],
      "#utils/*": [
        "utils/*"
      ]
    },
    "noImplicitAny": false,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}